    <!-- START Authentication Filter for Admin Page -->
    <filter>
        <filter-name>AdminAuthenticationFilter</filter-name>
        <filter-class>security.AdminAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthenticationFilter</filter-name>
        <url-pattern>/settingSubject</url-pattern>
        <url-pattern>/setting</url-pattern>
        <url-pattern>/userDetail</url-pattern>
        <url-pattern>/userList</url-pattern>

        <!-- Add other URL patterns for the admin role here -->
    </filter-mapping>
    <!-- END Authentication Filter for Admin Page -->
    
    <!-- START Authentication Filter for Manager Page -->
    <filter>
        <filter-name>ManagerAuthenticationFilter</filter-name>
        <filter-class>security.ManagerAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ManagerAuthenticationFilter</filter-name>
        <url-pattern>/settingSubject</url-pattern>
        <url-pattern>/setting</url-pattern>
        <url-pattern>/userDetail</url-pattern>
        <url-pattern>/userList</url-pattern>
        <!-- Add other URL patterns for the manager role here -->
    </filter-mapping>
    <!-- END Authentication Filter for Manager Page -->
    
