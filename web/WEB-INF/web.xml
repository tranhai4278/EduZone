        <filter-name>TrainerAuthenticationFilter</filter-name>
        <url-pattern></url-pattern>
        <!-- Add URL patterns for the trainer role here -->
    </filter-mapping>
    <!-- END Authentication Filter for Trainer Page -->

    <!-- START Authentication Filter for Normal Page -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>security.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/changepassword</url-pattern>
        <!-- Add other URL patterns for the normal role here -->
    </filter-mapping>
    <!-- END Authentication Filter for Normal Page -->
