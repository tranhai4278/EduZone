<?xml version="1.0" encoding="UTF-8"?>
<project name="Eduzon" default="all" basedir=".">
    <path id="classpath">
        <fileset dir="lib">
            <include name="firebase-admin-sdk.jar"/>
        </fileset>
    </path>

    <target name="all">
        <!-- TODO define script. See Help menu or http://ant.apache.org/ -->
    </target>
    
    <target name="init-firebase">
        <echo message="Initializing Firebase..."/>
        <java classname="com.yourpackage.FirebaseInitializer">
            <classpath>
                <path refid="classpath"/>
            </classpath>
            <arg value="FirebaseKey/serviceAccountKey.json"/>
        </java>
        <echo message="Firebase initialized successfully."/>
    </target>
</project>
